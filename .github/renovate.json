{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    ":approveMajorUpdates",
    ":automergeBranch",
    ":automergeDigest",
    ":automergeLinters",
    ":automergePatch",
    ":automergeTesters",
    ":enableVulnerabilityAlertsWithLabel('security')",
    ":gitSignOff",
    ":ignoreUnstable",
    ":preserveSemverRanges",
    ":rebaseStalePrs",
    ":semanticPrefixChore",
    ":separateMultipleMajorReleases",
    ":skipStatusChecks",
    ":timezone(Europe/Berlin)",
    "customManagers:dockerfileVersions",
    "customManagers:githubActionsVersions",
    "schedule:daily"
  ],
  "kubernetes": {
    "managerFilePatterns": [
      "/\\.ya?ml$/"
    ]
  },
  "labels": [
    "renovate"
  ],
  "packageRules": [
    {
      "matchManagers": [
        "helm-values"
      ],
      "pinDigests": false
    },
    {
      "description": "Workaround for azure/setup-helm action updates",
      "matchDepTypes": [
        "action"
      ],
      "matchPackageNames": [
        "azure/setup-helm"
      ],
      "extractVersion": "^(?<version>.+)$",
      "versioning": "regex:^v(?<major>\\d+)(\\.(?<minor>\\d+)(?:\\.(?<patch>\\d+))?)?$"
    },
    {
      "description": "Parse version tags of linuxserver.io images",
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "/^(ghcr|lscr).io\\/linuxserver\\/.*$/"
      ],
      "versioning": "regex:^(?:version-)?v?(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)(?:\\.(?<build>\\d+))?(?:-ls(?<revision>.+))?$"
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "datasourceTemplate": "docker",
      "description": "Update docker image references",
      "managerFilePatterns": [
        "/(^|/)Chart\\.yaml$/"
      ],
      "matchStrings": [
        "#\\s*renovate:\\s+image=(?<depName>.*?)\\s+appVersion:\\s*[\"']?(?<currentValue>[\\w+\\.\\-]*)(?:@(?<currentDigest>sha256:[a-f0-9]+))?[\"']?"
      ]
    }
  ],
  "postUpdateOptions": [
    "helmUpdateSubChartArchives"
  ],
  "stopUpdatingLabel": "renovate/stop_updating"
}
